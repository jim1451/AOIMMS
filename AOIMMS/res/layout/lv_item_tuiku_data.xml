<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

   <TextView
        android:id="@+id/lvItemID_tuiku"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/lvItemCCDC_tuiku"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/lvItemNum_tuiku"
        android:layout_width="60dp"
        android:background="#DDDDDD"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/lvItemName_tuiku"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/lvItemXiyuName_tuiku"
        android:background="#DDDDDD"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/lvItemType_tuiku"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center" 
        />
     <TextView
        android:id="@+id/lvItemUnit_tuiku"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        android:gravity="center" />
    

    <TextView
        android:id="@+id/lvItemUnitPrice_tuiku"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/lvItemTotalMoney_tuiku"
        android:background="#DDDDDD"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center" />

