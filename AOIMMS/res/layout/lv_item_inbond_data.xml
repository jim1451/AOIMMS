<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >
    
    <TextView
        android:id="@+id/lvItemID_inbond"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/lvItemCCDC_inbond"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/lvItemNum_inbond"
        android:layout_width="60dp"
        android:background="#DDDDDD"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/lvItemName_inbond"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center" />

    <TextView
        android:id="@+id/lvItemXiyuName_inbond"
        android:background="#DDDDDD"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/lvItemType_inbond"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center" 
        />
     <TextView
        android:id="@+id/lvItemUnit_inbond"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        android:gravity="center" />
    

    <EditText
        android:id="@+id/lvItemUnitPrice_inbond"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:hint="@string/input_unitprice"
        android:numeric="decimal"
        android:textSize="14sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/lvItemTotalMoney_inbond"
        android:background="#DDDDDD"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center" />
    

    <Button
        android:id="@+id/lvItemBack_inbond"
        android:layout_width="100dp"
        android:background="@null"
        android:textSize="14sp"
        android:layout_height="match_parent"
        android:gravity="center" 
        />

</LinearLayout>